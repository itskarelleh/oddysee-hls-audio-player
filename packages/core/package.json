{
  "name": "@hls-audio-player/core",
  "version": "0.1.0",
  "description": "A simple HLS audio player that wraps verbose HLS.js complexity into intuitive audio controls",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Karelle Hofler",
  "license": "Apache-2.0",
  "url": "https://github.com/itskarelleh/hls-audio-player",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "prepack": "npm run build"
  },
  "keywords": [
    "hls",
    "audio",
    "player",
    "streaming",
    "music",
    "podcast",
    "hls support",
    "audio player",
    "utility",
    "music player",
    "audio controls",
    "javascript",
    "html5",
    "web audio",
    "hls javascript",
    "hls.js wrapper",
    "hls.js player",
    "hls.js audio player",
    "hls.js audio controls",
    "hls.js audio player controls"
  ],
  "dependencies": {
    "@types/hls.js": "^1.0.0",
    "hls.js": "^1.4.10"
  },
  "devDependencies": {
    "tsup": "^7.0.0",
    "typescript": "^5.0.0",
    "vitest": "^0.32.0"
  }
}
