{
  "name": "oddysee-react",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "version": "0.1.0",
  "type": "module",
  "author": "Karelle Hofler",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/itskarelleh/oddysee-hls-audio-player",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --tsconfig tsconfig.lib.json",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "lint": "eslint .",
    "preview": "vite preview",
    "pub": "npm run build && npm publish",
    "pub:test": "npm run build && npm publish --tag test"
  },
  "dependencies": {
    "oddysee-typescript": "^0.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "tsup": "7.2.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
